{
  "compilerOptions": {
    "composite": true,
    "target": "esnext",
    "lib": ["ESNext", "DOM"],
    "jsx": "react-jsx",
    "moduleDetection": "force",
    "module": "esnext",
    "moduleResolution": "bundler",
    "typeRoots": ["./@types"],
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "outDir": "./dist",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
